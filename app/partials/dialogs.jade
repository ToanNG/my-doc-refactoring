#patients-signup-dialog.modal(tabindex="-1" role="dialog")
  .modal-dialog
    .modal-content
      .modal-header.text-center
        button.close(type="button" data-dismiss="modal")
          span &times;
          span.sr-only Close
        h2.modal-title Create your Patient account
      .modal-body
        form.md-form(role="form")
          .form-group
            label Mobile number
            input.form-control(type="text" value="+65")
            small &nbsp;&nbsp;
              a(href="") Get Registration Code
          .form-group
            input.form-control(type="text" placeholder="Enter the code sent to your phone")
          hr
          .form-group
            label Given name
            input.form-control(type="text")
          .form-group
            label Email address
            input.form-control(type="email" placeholder="This will be your username for the logging in")
          .form-group
            label Password
            input.form-control(type="password" placeholder="Password must be 8-12 alphanumeric characters")
          .form-group
            label Confirm password
            input.form-control(type="password" placeholder="")
          .checkbox
            label
              input(type="checkbox")
              | I accept the 
              a(href="terms.html") Terms & Conditions
          .form-group
            button.btn.md-btn.rounded.colored.darkblue(type="submit") Register

