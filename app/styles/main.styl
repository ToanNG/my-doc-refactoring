@import _fonts
@import _mixins
@import _variables

html, body
  height 100%
  
body
  font 300 16px 'Proxima Nova', sans-serif
  line-height 1.5em
  color site-text-color

.md-body
  img
    display block
    
  h1
    line-height 1.25em
    font-weight 300

  h2
    line-height 1.5em
    font-size 1.5em
    font-weight 400
    
  h3
    line-height 1.5em
    font-size 1.17em
    font-weight 400
    
  .form-control
    border solid thin #606c84
    &.invalid
      border solid thin red
      box-shadow(0 0 5px red)

  label
    font-weight 300 !important
  
.md-container
  max-width 960px
  height 100%
  padding 0 15px
  margin 0 auto

.padding-15
  padding 15px
  
.no-padding
  padding 0
  
.colored-bg
  background-color header-bg-color
  
.gray-text
  color gray
  
.border-top
  border-top solid thin #fff

.md-btn
  outline none !important
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-appearance none
  height 36px
  line-height 36px
  padding 0 15px
  color site-text-color
  background-color transparent
  border solid thin site-text-color
  border-radius(5px)
  behavior url('../polyfills/PIE.htc')
  position relative
  &:active
    box-shadow(0 0 20px site-text-color)
  &:hover
    background-color rgba(0,0,0,.1)
    
  &.rounded
    border-radius(18px)
    
  &.large
    height 48px
    line-height 48px
    padding 0 30px
    font-size 18px
    font-weight 300
    &.rounded
      border-radius(24px)
      
  &.colored
    color #fff
    border none
    
  &.colored.green
    background-color #50d869
    &:active
      box-shadow(0 0 20px #50d869)
    &:hover
      background-color darken(#50d869,25%)
      
  &.colored.blue
    background-color #57a6fd
    &:active
      box-shadow(0 0 20px #57a6fd)
    &:hover
      background-color darken(#57a6fd,25%)
      
  &.colored.darkblue
    background-color #7f93b6
    &:active
      box-shadow(0 0 20px #7f93b6)
    &:hover
      background-color darken(#7f93b6,25%)
      
  &.colored.lightgray
    color site-text-color
    background-color #f3f5f2
    &:active
      background-color darken(#f3f5f2,10%)
      box-shadow(0 0 20px #f3f5f2)
    &:hover
      background-color darken(#f3f5f2,10%)

hr.or
  position relative
  margin 30px 0
  &:before
    content "Or"
    position absolute
    top -12px
    left 50%
    margin-left -20px
    width 40px
    text-align center
    background-color #fff

.full-width
  width 100%
.full-height
  height 100%
  
.md-form
  max-width 500px
  margin 0 auto
  
  .md-btn
    min-width 100px
  
// Header // ------------------------------------------------------

#header
  height header-height
  color header-text-color
  background-color header-bg-color
  
  .logo
    height 100%
    width 200px
    background-image url('../images/logo.png')
    background-position left center
    background-size 150px auto
    -ms-behavior url("../polyfills/backgroundsize.min.htc")
    background-repeat no-repeat
    
  .md-navbar
    margin-bottom 0
    line-height header-height
    
    li
      padding 0 15px
      &:hover
        a
          color site-text-color
    
    a
      color header-text-color
      text-decoration none
      
  #login-btn
    margin 27px 0 0 15px
    
  #menu-btn
    display none
    position relative
    width 60px
    height 60px
    margin-right -15px
    background transparent url(../images/menu_icon1.png) center no-repeat
    background-size 40%
    -ms-behavior url("../polyfills/backgroundsize.min.htc")
    cursor pointer
    z-index 10
    &.active
      background #273759 url(../images/menu_icon2.png) center no-repeat
      background-size 40%
      .menu
        display block
      
    .menu
      display none
      position absolute
      top 60px
      right 0
      list-style none
      min-width 180px
      margin 0
      padding 0
      background-color #273759
      
      li
        padding 15px
        border-bottom solid thin #445270
        
      a
        display block
        color rgba(255,255,255,.6)
        text-decoration none
        &:hover
          background-color darken(#273759,15%)
          color #fff

// Dialog // ------------------------------------------------------

.modal-content
  overflow hidden
  .modal-header
    border-bottom none
    h2
      font-weight 300
  
.md-modal-header
  height 56px
  padding 0
  
.login-title
  float left
  display block
  width 50%
  height 100%
  line-height 56px
  text-align center
  background-color header-bg-color
  cursor pointer
  &.active
    background-color #fff

// Main // --------------------------------------------------------
      
#main
  position relative
  // min-height 100%
 
// Footer // ------------------------------------------------------

#footer
  width 100%
  color footer-text-color
  background-color footer-bg-color
  
  a
    color footer-text-color
    text-decoration none
    &:hover
      text-decoration underline
  
// Index Page // --------------------------------------------------

.index-wrapper
  overflow hidden
  
  .md-container
    max-width 768px
  .colored-bg
    background #f8f9f7 url(../images/gradient.png) right no-repeat
    background-size auto 100%
    -ms-behavior url("../polyfills/backgroundsize.min.htc")
    // box-shadow(inset 0 15px 100px #b9bcc4)
  h1
    font-size 28px
  ul
    padding-left 15px
    
  .row
    position relative
    height 100%
    
    .bg-img
      position absolute
      bottom 0
      height 90%
      &.pos-left
        right 45%
        text-align right // IE fix
      &.pos-right
        left 60%
      img
        display inline-block // IE fix
        
    .content
      &.pos-left
        padding 50px 0 0 100px
      &.pos-right
        padding 50px 0 0 75px
  
  .index-0
    display none
    height 240px
    background transparent url(../images/index_s1_bg.png) center bottom no-repeat
    background-size cover
    -ms-behavior url("../polyfills/backgroundsize.min.htc")
    .bg-img
    img
      height 100% !important
    
  .index-1
    background transparent url(../images/index_s1_bg.png) center bottom no-repeat
    background-size cover
    -ms-behavior url("../polyfills/backgroundsize.min.htc")
    .md-container
      height 360px
      background transparent url(../images/index_s1_1.png) center bottom no-repeat
    .bg-img.pos-left
        right 55%
      
  .index-2>.md-container
    height 330px
    background transparent url(../images/index_s2_1.png) center top no-repeat
  
  .index-3>.md-container
    height 330px
    background transparent url(../images/index_s3_1.png) center top no-repeat
    
  .index-4>.md-container
    height 330px
    background transparent url(../images/index_s4_1.png) center top no-repeat
  
  .index-5>.md-container
    height 330px
    background transparent url(../images/index_s5_1.png) center top no-repeat
    .bg-img
      height 80%
    
// Patients Page // -----------------------------------------------

.patients-1
  .app-store-btn
  .google-play-btn
    display inline-block
    width 155px
    height 54px
    margin 1em 0
    cursor pointer
  .app-store-btn
    background transparent url(../images/appstore.png) center no-repeat
  .google-play-btn
    background transparent url(../images/googleplay.png) center no-repeat
  
.patients-2
  h2
    margin-top 15%
    
.patients-4
  .icon
    float left
    
  .content
    margin-left 95px
    padding 0 15px 0 30px
    
