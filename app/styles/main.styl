@import _fonts
@import _mixins
@import _variables

html, body
  height 100%
  
body
  font 300 16px 'Proxima Nova', sans-serif
  line-height 1.5em
  color site-text-color

.md-body
  img
    display block
    
  h1
    line-height 1.25em
    font-weight 300

  h2
    line-height 1.5em
    font-size 1.5em
    font-weight 400
    
  h3
    line-height 1.5em
    font-size 1.17em
    font-weight 400
  
.md-container
  max-width 960px
  height 100%
  padding 0 15px
  margin 0 auto

.padding-15
  padding 15px
  
.colored-bg
  background-color header-bg-color

.md-btn
  height 36px
  line-height 36px
  padding 0 15px
  color site-text-color
  background-color transparent
  border solid thin site-text-color
  border-radius(5px)
  behavior url('../polyfills/PIE.htc')
  position relative
  &.rounded
    border-radius(18px)
  &.large
    height 48px
    line-height 48px
    padding 0 30px
    font-size 18px
    font-weight 300
    &.rounded
      border-radius(24px)
  &.colored.green
    color #fff
    background-color #50d869
    border none
  &:active
    box-shadow(0 0 20px site-text-color)

.full-width
  width 100%
  
// Header // ------------------------------------------------------

#header
  overflow hidden
  height header-height
  color header-text-color
  background-color header-bg-color
  
  .logo
    height 90px
    width 200px
    background-image url('../images/logo.png')
    background-position left center
    background-size 120px auto
    -ms-behavior url("../polyfills/backgroundsize.min.htc")
    background-repeat no-repeat
    
  .md-navbar
    line-height header-height
    
    a
      color header-text-color
      
  #login-btn
    margin 27px 0 0 15px
  
// Main // --------------------------------------------------------
      
#main
  position relative
  // min-height 100%
 
// Footer // ------------------------------------------------------

#footer
  width 100%
  color footer-text-color
  background-color footer-bg-color
  
  a
    color footer-text-color
    text-decoration none
  
