    margin 0 30px
    
.professionals-5
  .price-panel
    position relative
    min-height 620px
    background-color #fff
    border solid thin #c4cbd8
    p
      margin 1em 0
    .head
      overflow auto
      text-align center
    .content
      padding 0 15px 110px
    .foot
      position absolute
      bottom 0
      left 0
      right 0
      padding 15px 15px 0
      text-align center
      
  .basic
    margin-left 20%
    .head
      background-color header-bg-color
    
  .paid
    margin-right 20%
    .head
      background-color #c4cbd8

// Contact Page // ------------------------------------------------

.contact-2
  .contact-form
    max-width 350px
    margin 0 auto
  
  .md-btn
